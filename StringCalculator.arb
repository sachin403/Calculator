        numbers.split(',').map(&:to_i).reduce(0, :+)
      end
 end

# Test Cases step-1
def setup
    @calculator = StringCalculator.new
end

def test_empty_string
    assert_equal 0, @calculator.add("")
end

def test_one_number
    assert_equal 1, @calculator.add("1")
end

def test_two_numbers
    assert_equal 6, @calculator.add("1,5")
end

